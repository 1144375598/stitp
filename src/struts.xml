<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<constant name="struts.i18n.encoding" value="UTF-8"></constant>

	<package name="user" namespace="/user" extends="json-default">
		<action name="login" class="com.njupt.stitp.server.action.UserAction"
			method="login">
			<result type="json"></result>
		</action>

		<action name="register" class="com.njupt.stitp.server.action.UserAction"
			method="register">
			<result type="json"></result>
		</action>
	</package>

	<package name="uploadInfo" namespace="/uploadInfo" extends="json-default">
		<action name="appInfo" class="com.njupt.stitp.server.action.UploadInfoAction"
			method="uploadAPPInfo">
			<result type="json"></result>
		</action>

		<action name="trackInfo" class="com.njupt.stitp.server.action.UploadInfoAction"
			method="uploadTrackInfo">
			<result type="json"></result>
		</action>
	</package>
	<package name="downloadInfo" namespace="/downloadInfo" extends="json-default">
		<action name="appInfo" class="com.njupt.stitp.server.action.DownloadInfoAction"
			method="DownloadAPPInfo">
			<result type="json"></result>
		</action>

		<action name="trackInfo" class="com.njupt.stitp.server.action.DownloadInfoAction"
			method="DownloadTrackInfo">
			<result type="json"></result>
		</action>
	</package>
</struts>    
